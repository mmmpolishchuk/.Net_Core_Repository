@section NewsSection{
    <table class="table table-hover">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Text</th>
            <th colspan="2">Author</th>
            <th>IsFake</th>
        </tr>
        @foreach (var news in (IEnumerable<News>)ViewData["allNews"])
        {
            <tr>
                <td>@news.Id</td>
                <td>@news.Title</td>
                <td>@news.Text</td>
                <td colspan="2">@news.Author.FirstName    @news.Author.LastName</td>
                <td>@news.IsFake</td>
            </tr>
        }
    </table>
}