@model AccountRegisterViewModel
@{
    ViewData["Title"] = "Register";
}

@section ScriptForCheckBox
{
    <script type="text/javascript">
    $(document).ready(function () {
     
        $("#smsBox").click(
            function () {
                $("#emailBox").attr('checked',true)
                
            }            
        );
    });
    </script>
}

<section class="min-vh-100">
    <div>
        <div class="container">
            <div class="row text-dark">
                <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form p-4">
                    <h1 class="display-4 py-2 text-info">REGISTRATION</h1>
                    <div class="px-2">
                        <form asp-controller="Account" asp-action="Register" method="post" class="justify-content-center">
                            <div asp-validation-summary="All"></div>
                            <div class="form-group">
                                <label asp-for="Email" class="sr-only">Name</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="Enter email">
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="sr-only">Email</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Enter password">
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="sr-only">Email</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm password">
                            </div>
                            <div id="sendMessageGoup" style="text-align: center " >
                                <div class="form-group form-check" >
                                    <input asp-for="SendSms" type="checkbox" id="smsBox" class="form-check-input"/>
                                    <label asp-for="SendSms" class="form-check-label small">Send SMS to confirm</label><br/>
                                </div>
                                <div class="form-group form-check">
                                    <input asp-for="SendEmail" type="checkbox" id="emailBox" class="form-check-input"/>
                                    <label asp-for="SendEmail" class="form-check-label small">Send Email to confirm</label><br/>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg">Register</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

